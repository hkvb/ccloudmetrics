#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="hkvb/ccloudmetrics"
export VCW_STACK_GLOBAL_STACKNAMES="metrics"
export VCW_STACK_GLOBAL_BOOTSTACKS="metrics"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST=""
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_METRICS_ENVIRONMENT,\
$VCW_STACK_METRICS_COMMAND,\
$VCW_STACK_METRICS_PORTS,\
$VCW_STACK_METRICS_VOLUMES,\
$VCW_STACK_METRICS_NETWORKS,\
$VCW_STACK_METRICS_DEPLOY_MODE,\
$VCW_STACK_GLOBAL_NETWORKS,\
$VCW_STACK_GLOBAL_VOLUMES'
export VCW_STACK_GLOBAL_SERVICE_NAME="ccloudexporter"
export VCW_STACK_GLOBAL_IMAGE_NAME="dabz/ccloudexporter"
export VCW_STACK_METRICS_ENVIRONMENT="\
'CCLOUD_API_KEY=${DOLLAR}{VCW_STACK_METRICS_MODULE_CCLOUD_API_KEY}',\
'CCLOUD_API_SECRET=${DOLLAR}{VCW_STACK_METRICS_MODULE_CCLOUD_API_SECRET}',\
'CCLOUD_CLUSTER=${DOLLAR}{VCW_STACK_METRICS_MODULE_CCLOUD_CLUSTER}',\
'CCLOUD_CONNECTOR=${DOLLAR}{VCW_STACK_METRICS_MODULE_CCLOUD_CONNECTOR}',\
'CCLOUD_KSQL=${DOLLAR}{VCW_STACK_METRICS_MODULE_CCLOUD_KSQL}',\
'CCLOUD_SCHEMA_REGISTRY=${DOLLAR}{VCW_STACK_METRICS_MODULE_CCLOUD_SCHEMA_REGISTRY}'"
export VCW_STACK_METRICS_COMMAND=""
export VCW_STACK_METRICS_PORTS=
export VCW_STACK_METRICS_VOLUMES=""
export VCW_STACK_METRICS_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_METRICS_DEPLOY_MODE="replicated"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
export VCW_STACK_GLOBAL_VOLUMES=""
# END GLOBAL SETTINGS

# START SETTINGS traefik.base
export VCW_STACK_METRICS_MODULE_CCLOUD_API_KEY="${CONFIGURATION_MODULE_METRICS_CCLOUD_API_KEY}"
export VCW_STACK_METRICS_MODULE_CCLOUD_SECRET_KEY="${CONFIGURATION_MODULE_METRICS_CCLOUD_SECRET_KEY}"
export VCW_STACK_METRICS_MODULE_CCLOUD_CLUSTER="${CONFIGURATION_MODULE_METRICS_CCLOUD_CLUSTER}"
export VCW_STACK_METRICS_MODULE_CCLOUD_CONNECTOR="${CONFIGURATION_MODULE_METRICS_CCLOUD_CONNECTOR}"
export VCW_STACK_METRICS_MODULE_CCLOUD_CCLOUD_KSQL="${CONFIGURATION_MODULE_METRICS_CCLOUD_KSQL}"
export VCW_STACK_METRICS_MODULE_CCLOUD_SCHEMA_REGISTRY="${CONFIGURATION_MODULE_METRICS_CCLOUD_SCHEMA_REGISTRY}"
export VCW_STACK_METRICS_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_METRICS_MEMORY_LIMIT}"
export VCW_STACK_METRICS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_METRICS_MEMORY_RESERVED}"
# END SETTINGS traefik.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
